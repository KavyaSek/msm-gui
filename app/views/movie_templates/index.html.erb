<h1>
  List of all movies
</h1>

<hr>

<form action="insert_movie" method="post">

  <label for="title">Title</label>
  <input id="title" type="text" name="mov_title"><br>
  
  <label for="year">Year</label>
  <input id="year" type="text" name="mov_year"><br>
  
  <label for="duration">Duration</label>
  <input id="duration" type="text" name="mov_duration"><br>  
  
  <label for="description">Description</label>
  <textarea id="description" name="mov_desc" rows="3"></textarea><br>

  <label for="img">Image</label>
  <input id="img" type="text" name="mov_img"><br>

  <label for="director_id">Director ID</label>
  <input id="director_id" type="text" name="dir_id"><br>   

  <button>Create movie</button>	
</form>


<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_movies.each do |a_movie| %>
  <tr>
    <td>
      <%= a_movie.id %>
    </td>

    <td>
      <img src="<%= a_movie.image %>" style="width:250px;">
    </td>

    <td>
      <%= a_movie.title %>
    </td>

    <td>
      <%= a_movie.year %>
    </td>

    <td>
      <% matching_directors = Director.where({ :id => a_movie.director_id }) %>
      
      <% the_director = matching_directors.at(0) %>

      <%= the_director.name %>
    </td>

    <td>
      <a href="/movies/<%= a_movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
