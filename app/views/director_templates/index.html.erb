<h1>
  List of all directors
</h1>

<hr>

<form action="insert_director" method="post">

  <label for="name">Name</label>
  <input id="name" type="text" name="dir_name"><br>
  <label for="dob">Dob</label>
  <input id="dob" type="date" name="dir_dob"><br>
  <label for="bio">Bio</label>
  <textarea id="bio_box" name="dir_bio" rows="3"></textarea><br>
  <label for="img">Image</label>
  <input id="img" type="text" name="dir_img"><br>
  

  <button>Create director</button>	
</form>


<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
